  <script>
    const nombres = [
      "Juan", "Ana", "Carlos", "Luc√≠a", "Pedro", 
      "Mar√≠a", "Sof√≠a", "Luis", "Elena", "Diego"
    ];

    function mostrarNombre() {
      const aleatorio = Math.floor(Math.random() * nombres.length);
      document.getElementById("nombre").textContent = nombres[aleatorio];
